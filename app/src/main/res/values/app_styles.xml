<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Custom colors. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorError">@color/error</item>
        <item name="android:colorBackground">@drawable/splash_background_gradient</item>
        <item name="android:windowBackground">@drawable/splash_background_gradient</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:colorForeground">@color/foreground</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
        <item name="android:textColorSecondaryInverse">@color/text_primary_inverse</item>
        <!-- Custom text. -->
        <item name="android:fontFamily">@font/monterey_font</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="Widget.AppTheme.Dialog" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.AppTheme.ProgressBar" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateTint">@color/accent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="Widget.AppTheme.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HelperText</item>
        <item name="errorTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.Error</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.Hint</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.Hint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:paddingRight">@dimen/_4dp</item>
        <item name="android:paddingLeft">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HelperText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.Error" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>
    
</resources>

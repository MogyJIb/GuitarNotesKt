<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Custom colors. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorError">@color/error</item>
        <item name="android:colorBackground">@drawable/splash_background_gradient</item>
        <item name="android:windowBackground">@drawable/splash_background_gradient</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:colorForeground">@color/foreground</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
        <item name="android:textColorSecondaryInverse">@color/text_primary_inverse</item>
    </style>

    <style name="Widget.AppTheme.Dialog" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.AppTheme.ProgressBar" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateTint">@color/accent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

</resources>

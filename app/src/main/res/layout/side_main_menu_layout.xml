<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/buttons_container"
        android:layout_alignTop="@id/buttons_container"
        android:layout_marginTop="@dimen/_14dp"
        android:layout_marginBottom="@dimen/_14dp"
        android:background="@color/primary"
        />

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16dp"
        android:orientation="vertical"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_12sp"

            app:backgroundTint="@color/background"
            app:strokeColor="@color/accent"
            app:strokeWidth="@dimen/_2dp"
            app:cornerRadius="@dimen/_20dp"
            app:icon="@drawable/outline_place_white_18"

            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_12sp"

            app:backgroundTint="@color/background"
            app:strokeColor="@color/accent"
            app:strokeWidth="@dimen/_2dp"
            app:cornerRadius="@dimen/_20dp"
            app:icon="@drawable/outline_place_white_18"

            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/color_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_12sp"

            app:backgroundTint="@color/background"
            app:strokeColor="@color/accent"
            app:strokeWidth="@dimen/_2dp"
            app:cornerRadius="@dimen/_20dp"
            app:icon="@drawable/outline_place_white_18"

            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

    </LinearLayout>

</RelativeLayout>
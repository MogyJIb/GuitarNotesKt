<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/splash_fragment"
    >

    <fragment
        android:id="@+id/splash_fragment"
        android:name="by.mogyjib.guitarnotes.main.splash.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash"
        >

        <action
            android:id="@+id/action_splash_to_songlist"
            app:destination="@+id/songlist_fragment"
            app:popUpTo="@id/songlist_fragment"
            />

    </fragment>

    <fragment
        android:id="@+id/songlist_fragment"
        android:name="by.mogyjib.guitarnotes.main.songs.view.SongListFragment"
        android:label="fragment_songlist"
        tools:layout="@layout/fragment_songlist"
        />

</navigation>
